---
import {render} from 'astro:content';
const {poema} = Astro.props;
const {data,grid} =poema;
const {titulo,autor,fecha,imagen,fondo,texto}=data;
const {slug} =poema;
const {Content} = await render(poema);
let lineclamp="";
if(grid==="row-span-3"){
    lineclamp="line-clamp-4"
}
else{
    lineclamp="line-clamp-2"
}
---


<div class=`${grid} ${fondo}`>
    <a href=`/poema/${slug}` class="cursor-pointer">
        <div class="w-full h-1/4 flex flex-col shadow-2xl">
        <div class="w-full h-3/2">
            <img src=`${imagen}` alt={titulo} class="w-full h-full object-cover ">
        </div>
        <div class=`flex flex-col   items-center  w-full  ${texto}`>
          <span class="${texto} font-zilla text-center text-base">{titulo}</span>
            <div class="w-full flex justify-between">
                <p class="${texto} font-zen text-sm">{autor}</p>
               
                <p class="${texto} font-zen text-sm">{fecha}</p>
            </div>
           <div class=`whitespace-pre-line overflow-ellipsis ${lineclamp} text-sm font-zen text-center`> 
               <Content/>
           </div>
            
    
        </div>
    </div> </a>
</div>
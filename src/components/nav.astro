---

const links=['Poemas','Poemario','Versos'];
const {info}=Astro.props;
---

<main class=`w-full py-5 px-10 hidden lg:block `>
    <nav class="w-full flex justify-between items-center bg-transparent">
        <div class="w-auto">
            <span class=`text-3xl 2xl:text-6xl font-zilla  `><a href="/">Poetozo</a></span>
        </div>
        

        <ul class="flex  justify-evenly items-center w-1/3">
            {
                links.map((link)=>{
                    if(link==='Versos'){
                        return <li id="btn-verso" class={`text-xl 2xl:text-4xl font-zen bg-black text-white py-0.5  px-3 2xl:py-2 2xl:px-6 rounded-20  transition-all duration-500 delay-300 hover:bg-gray-200 hover:text-black cursor-pointer`}><a href={info}>Versos</a></li>
                    }
                    else{
                        return <li id={`id-${link}`} class={`text-xl 2xl:text-4xl font-zen hover:bg-black hover:text-white hover:p-1 transition-all ease-in-out delay-75 duration-300 cursor-pointer`}><a href={info}>{link}</a></li>
                    }
                })
            }
        </ul>
    </nav>

</main>

<main class="w-full  lg:hidden block">
    <nav class="w-full flex flex-col  justify-between items-center bg-azul-pastel fixed z-10 top-0 p-2">
        <div class="w-full flex justify-between">
            <span class="text-4xl font-zilla "><a href="/">Poetozo</a></span>
            <button id="open-button"><img id="icon-img" src="/imgpage/icono-open.svg" alt="icon-open"></button>
        </div>
                   
        <ul id="menu-movil" class=" flex-col h-screen  justify-evenly items-center w-full hidden fixed top-12 z-10 bg-azul-pastel ">
            {
                links.map((link)=>{
                        return <li id={`id-${link}`} class="text-2xl font-zen font-black hover:bg-black hover:text-white hover:p-1 transition-all ease-in-out delay-75 duration-300 cursor-pointer"><a href={info}>{link}</a></li>
                })
            }
        </ul>
        
    
    </nav>

</main>

<script>
    let openButton = document.getElementById('open-button');
    let ul = document.getElementById('menu-movil');
    let iconImg=document.getElementById('icon-img');
    ul?.classList.add("transition-all","ease-in-out","delay-300","duration-500");
    openButton?.addEventListener('click',()=>{

        if(ul?.classList.contains('hidden')){
            ul?.classList.remove('hidden');
            ul?.classList.toggle('flex');
            iconImg.src="/imgpage/icono-close.svg";
            iconImg?.classList.add("transition-all","ease-in-out","delay-300","duration-500");
        }
        else{
            ul?.classList.remove('flex');
            ul?.classList.toggle('hidden');
            iconImg.src="../../src/assets/img/icono-open.svg";
            iconImg?.classList.add("transition-all","ease-in-out","delay-300","duration-500");
        }

       
    });

</script>
